<Window x:Class="Facebook_MKT.WPF.SetupPostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Facebook_MKT.WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="SetupPostWindow" Height="450" Width="800">
    <Grid Background="{StaticResource backgroundColor}">
        <StackPanel  >
            <RichTextBox x:Name="ContentRichTextBox" Height="300" Foreground="White"/>
            <Button Foreground="White" Content="Chọn file" 
                       HorizontalAlignment="Center" Margin="10" Click="Button_Click" />
            <Button Foreground="White" Content="Áp Dụng" 
               HorizontalAlignment="Center" Margin="10" Click="Button_Click_1" />
        </StackPanel>
    </Grid>
</Window>
